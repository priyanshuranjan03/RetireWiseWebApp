<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetireWise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RetireWiseWebApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <i class="bi bi-piggy-bank text-primary me-2"></i>
                    <span class="text-primary">Retire</span><span class="text-dark">Wise</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-page="/Index">
                                <i class="bi bi-house me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-page="/FileUpload">
                                <i class="bi bi-file-earmark-bar-graph me-1"></i> Document Analysis
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-page="/Privacy">
                                <i class="bi bi-shield-check me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a href="/FileUpload" class="btn btn-primary">
                            <i class="bi bi-rocket-takeoff me-1"></i> Get Started
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    @if (ViewContext.RouteData.Values["page"]?.ToString() != "/Index")
    {
        <div class="container-fluid p-0">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    }

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-3">
                    <h5 class="text-primary">
                        <i class="bi bi-piggy-bank me-2"></i>RetireWise
                    </h5>
                    <p class="text-light-emphasis">AI-powered financial planning for a secure retirement future.</p>
                </div>
                <div class="col-lg-2 mb-3">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-light-emphasis text-decoration-none">Home</a></li>
                        <li><a href="/FileUpload" class="text-light-emphasis text-decoration-none">Analysis</a></li>
                        <li><a href="/Privacy" class="text-light-emphasis text-decoration-none">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-3">
                    <h6>Features</h6>
                    <ul class="list-unstyled">
                        <li class="text-light-emphasis">AI Document Analysis</li>
                        <li class="text-light-emphasis">Investment Guidance</li>
                        <li class="text-light-emphasis">Retirement Planning</li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-3">
                    <h6>Security</h6>
                    <p class="text-light-emphasis small">Your data is encrypted and processed securely. We prioritize your financial privacy.</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-light-emphasis">&copy; @DateTime.Now.Year RetireWise. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="text-light-emphasis small">Made with <i class="bi bi-heart-fill text-danger"></i> for your financial future</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>