@page
@model RetireWiseWebApp.Pages.IndexModel
@{
    ViewData["Title"] = "RetireWise - AI-Powered Financial Analysis";
}

<link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        Smart <span>Retirement</span> Planning
                        <br />with AI-Powered Insights
                    </h1>
                    <p class="hero-subtitle">
                        Upload your financial documents and get personalized retirement advice 
                        from our advanced AI financial advisor. Make informed decisions for your future.
                    </p>
                    <div class="hero-buttons">
                        <a href="/FileUpload" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-rocket-takeoff"></i> Get Started
                        </a>
                        <a href="#features" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-info-circle"></i> Learn More
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="hero-card">
                        <div class="card-header">
                            <i class="bi bi-graph-up text-success"></i>
                            <span>Financial Analysis</span>
                        </div>
                        <div class="card-content">
                            <div class="metric">
                                <div class="metric-label">Retirement Readiness</div>
                                <div class="metric-value text-success">85%</div>
                            </div>
                            <div class="metric">
                                <div class="metric-label">Monthly Savings</div>
                                <div class="metric-value text-primary">₹67,000</div>
                            </div>
                            <div class="metric">
                                <div class="metric-label">Investment Score</div>
                                <div class="metric-value text-warning">A-</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section id="features" class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="section-title">Why Choose RetireWise?</h2>
                <p class="section-subtitle">Advanced AI technology meets personalized financial planning</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-robot"></i>
                    </div>
                    <h4>AI-Powered Analysis</h4>
                    <p>Our advanced AI analyzes your financial documents to provide personalized retirement insights and recommendations.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4>Secure & Private</h4>
                    <p>Your financial data is encrypted and processed securely. We never store your personal information permanently.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                    <h4>Investment Guidance</h4>
                    <p>Get tailored investment recommendations based on your risk tolerance and financial goals.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-calculator"></i>
                    </div>
                    <h4>Retirement Calculator</h4>
                    <p>Calculate your retirement corpus and understand how much you need to save for a comfortable retirement.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <h4>Interactive Chat</h4>
                    <p>Ask questions and get instant answers about your financial situation through our conversational AI.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <h4>Document Support</h4>
                    <p>Upload various file formats including PDFs, Excel sheets, and bank statements for comprehensive analysis.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works-section py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="section-title">How It Works</h2>
                <p class="section-subtitle">Get started with your financial analysis in just 3 simple steps</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 text-center mb-4">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <div class="step-icon">
                        <i class="bi bi-cloud-upload"></i>
                    </div>
                    <h4>Upload Documents</h4>
                    <p>Upload your financial documents like bank statements, investment portfolios, and expense reports.</p>
                </div>
            </div>
            <div class="col-lg-4 text-center mb-4">
                <div class="step-card">
                    <div class="step-number">2</div>
                    <div class="step-icon">
                        <i class="bi bi-cpu"></i>
                    </div>
                    <h4>AI Analysis</h4>
                    <p>Our AI processes your documents and analyzes your financial patterns, spending habits, and savings potential.</p>
                </div>
            </div>
            <div class="col-lg-4 text-center mb-4">
                <div class="step-card">
                    <div class="step-number">3</div>
                    <div class="step-icon">
                        <i class="bi bi-lightbulb"></i>
                    </div>
                    <h4>Get Insights</h4>
                    <p>Receive personalized recommendations, investment advice, and retirement planning strategies.</p>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/FileUpload" class="btn btn-primary btn-lg">
                    <i class="bi bi-play-fill"></i> Start Your Analysis Now
                </a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h2 class="text-white mb-3">Ready to Secure Your Financial Future?</h2>
                <p class="text-white-50 mb-4">Join thousands of users who have improved their retirement planning with RetireWise AI.</p>
                <a href="/FileUpload" class="btn btn-light btn-lg">
                    <i class="bi bi-arrow-right"></i> Get Started Today
                </a>
            </div>
        </div>
    </div>
</section>
